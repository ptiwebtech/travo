<script type="text/javascript">
    setTimeout(function(){
      $('select.my-select-id option[value="48a9fea4-1b80-45fb-9b2a-1ffc838ae2aa"]').remove();
    
    // Remove the 'Storefront' option
    $('select.my-select-id option[value="edde8b08-6053-44b3-bd75-5aed0abb9a4d"]').remove();

    // You can log the updated select options to check the result
    console.log($('select.my-select-id').html());
    }, 5000);

    $(document).ready(function() {
        $.ajax({
            url: 'https://app.travo.ng/v1/vendors',
            method: 'GET',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': 'Bearer flb_live_3TWrpgeE2iTkvJG0myIk', 
            },
            success: function(response) {
                var vendors = response;
                if (Array.isArray(vendors) && vendors.length > 0) {
                    console.log(vendors);
                    $('#vendor-select').empty();
                    $('#vendor-select').append('<option selected disabled>Select vendor to assign service rate to</option>');
                    vendors.forEach(function(vendor) {
                        console.log(vendor);
                        $('#vendor-select').append(`<option value="${vendor.id}">${vendor.name}</option>`);
                    });
                } else {
                    console.error('No vendors found.');
                }
            },
            error: function(error) {
                console.error('Error fetching vendors:', error);
            }
        });

        // Fetch and render places
        $.ajax({
            url: 'https://app.travo.ng/v1/places',
            method: 'GET',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': 'Bearer flb_live_3TWrpgeE2iTkvJG0myIk',
            },
            success: function (response) {
                var places = response;
                if (Array.isArray(places) && places.length > 0) {
                    updateLocationSelect('#departure-places-select', places, 'Departure');
                    updateLocationSelect('#arrival-places-select', places, 'Arrival');
                } else {
                    $('#departure-places-select').empty();
                    $('#departure-places-select').append('<option disabled>No places available</option>');
                    $('#arrival-places-select').empty();
                    $('#arrival-places-select').append('<option disabled>No places available</option>');
                }
            },
            error: function (error) {
                $('#departure-places-select').empty();
                $('#departure-places-select').append('<option disabled>Error fetching places</option>');
                $('#arrival-places-select').empty();
                $('#arrival-places-select').append('<option disabled>Error fetching places</option>');
            }
        });
        function updateLocationSelect(selectId, places, locationType) {
            $(selectId).empty();
            if (Array.isArray(places) && places.length > 0) {
                $(selectId).append('<optgroup label="Available Places">');
                $(selectId).append('<option selected disabled>Select a place</option>');
                places.forEach(function (place) {
                    let truncatedAddress = place.address.length > 15 ? place.address.substring(0, 15) + '...' : place.address;
                    $(selectId).append(`
                        <option value="${place.id}">
                            ${place.name} - ${truncatedAddress}
                        </option>
                    `);
                });
                $(selectId).append('</optgroup>');
            } else {
                $(selectId).append('<option disabled>No places available</option>');
            }
        }

        $('.ticket select').on('change', function () {
            var selectedValue = $(this).val();
            if (selectedValue === 'ticket') {
                $('.ticket-place').show();
            } else {
                $('.ticket-place').hide();
            }
        });
    });

    var urlPartsService = window.location.href.split('/');
    var serviceId = urlPartsService[urlPartsService.length - 1];

    if (serviceId && serviceId.startsWith('service_')) {
        fetch(`https://african.land/travo_api/get_vendor_by_service_api.php?service_id=${serviceId}`)
            .then(response => response.json())
            .then(data => {
                if (data && data.vendor) {
                    var vendorSelect = document.getElementById('vendor-select');
                    let optionExists = false;
                    Array.from(vendorSelect.options).forEach(option => {
                        if (option.value === data.vendor.vendor_id) {
                            option.selected = true;
                            optionExists = true;
                        }
                    });
                    if (!optionExists) {
                        var option = document.createElement('option');
                        option.value = data.vendor.vendor_id;
                        option.textContent = `Vendor: ${data.vendor.vendor_id}`;
                        option.selected = true;
                        vendorSelect.appendChild(option);
                    }
                } else {
                    console.error('No vendor found for this service ID.');
                }
            })
            .catch(error => {
                console.error('Error fetching vendor details:', error);
            });
    }






</script>