<div class="fixed inset-0 w-screen h-screen z-[9999] flex flex-col items-center justify-center bg-black/90 backdrop-blur-sm" style="position: fixed !important; top: 0; left: 0; right: 0; bottom: 0;">
    <div class="relative bg-gray-900 rounded-xl shadow-2xl flex flex-col max-w-[90%] max-h-[90%] overflow-hidden border border-gray-700">
        <div class="flex items-center justify-between p-4 border-b border-gray-800 bg-gray-900/50">
            <h3 class="text-white text-sm font-medium truncate pr-8">{{or @options.title "Preview"}}</h3>
            {{!-- Cross Button --}}
            <button type="button" class="text-gray-400 hover:text-white transition-colors" {{on "click" (fn @options.onClose @modal)}}>
                <FaIcon @icon="times" />
            </button>
        </div>

        <div class="flex-1 overflow-auto bg-black flex items-center justify-center p-2">
            <img src={{@options.imageSource}} alt={{@options.title}} class="max-w-full max-h-[70vh] object-contain" />
        </div>

        <div class="p-4 bg-gray-900 border-t border-gray-800 flex justify-end">
            {{!-- Done Button --}}
            <button type="button" class="btn btn-primary px-8 py-2 font-bold shadow-lg" {{on "click" (fn @options.onClose @modal)}}>
                {{or @options.acceptButtonText "Done"}}
            </button>
        </div>
    </div>
</div>